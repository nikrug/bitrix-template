mixin PopupBlock(buttonClass = 'popup-block__button', lngKey = '')
    section.popup-block.j-popup-block
        .popup-block__actions
            .popup-block__button
                button.simple-btn.j-example-popup-button(class= buttonClass)
                    p(lng= lngKey)
        include components/example-popup/example-popup
        include components/example-popup-two/example-popup-two